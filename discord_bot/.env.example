# Discord Bot Configuration
# Copy this file to .env and fill in your actual values

# Required: Game name (e.g., valheim, satisfactory)
# This determines the command name: /<game> status|start|stop|help
GAME_NAME=

# Required for command registration
DISCORD_BOT_TOKEN=your_bot_token_here
DISCORD_APP_ID=your_application_id_here

# Required for guild-specific command registration (not needed for global commands)
DISCORD_GUILD_ID=your_guild_id_here

# Required for the Lambda function
DISCORD_PUBLIC_KEY=your_public_key_here
INSTANCE_ID=your_instance_id_here

# Optional: Comma-separated list of user IDs authorized to start/stop the server
# If left empty, all users can control the server
AUTHORIZED_USERS= 